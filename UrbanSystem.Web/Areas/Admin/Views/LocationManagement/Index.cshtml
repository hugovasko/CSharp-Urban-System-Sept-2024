@model IEnumerable<UrbanSystem.Web.ViewModels.Locations.LocationDetailsViewModel>

<div class="container mt-5">
    <h1 class="text-center mb-4">Location Management</h1>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in Model)
            {
                <tr>
                    <td>@location.CityName</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-controller="LocationManagement" asp-area="Admin" class="d-inline">
                            <input type="hidden" name="id" value="@location.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this location?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>