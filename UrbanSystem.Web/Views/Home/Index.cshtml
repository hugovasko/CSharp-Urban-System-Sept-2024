@{
    ViewData["Title"] = "Welcome to Urban Web System";
}

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .hero {
        background: linear-gradient(to right, #1e40af, #3b82f6);
        color: white;
        padding: 80px 0;
        text-align: center;
    }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
            animation: fadeIn 1s ease-out;
        }

        .hero p {
            font-size: 1.5rem;
            max-width: 800px;
            margin: 0 auto;
            animation: fadeInUp 1s ease-out;
        }

    .section {
        padding: 60px 0;
        text-align: center;
    }

        .section h2 {
            font-size: 2.5rem;
            color: #1e40af;
            margin-bottom: 2rem;
        }

        .section p {
            font-size: 1.2rem;
            color: #4b5563;
            max-width: 800px;
            margin: 0 auto;
            line-height: 1.6;
        }

    .features {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        margin-top: 3rem;
    }

    .feature-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        width: calc(33.333% - 2rem);
        min-width: 250px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .feature-card h3 {
            font-size: 1.5rem;
            color: #1e40af;
            margin-bottom: 1rem;
        }

        .feature-card p {
            font-size: 1rem;
            color: #4b5563;
        }

    .cta-button {
        display: inline-block;
        background-color: #1e40af;
        color: white;
        padding: 12px 24px;
        border-radius: 30px;
        text-decoration: none;
        font-size: 1.2rem;
        transition: background-color 0.3s ease;
        margin-top: 2rem;
    }

        .cta-button:hover {
            background-color: #1c3d8f;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 768px) {
        .hero h1

    {
        font-size: 2.5rem;
    }

    .hero p {
        font-size: 1.2rem;
    }

    .section h2 {
        font-size: 2rem;
    }

    .feature-card {
        width: calc(50% - 2rem);
    }

    }

    @@media (max-width: 480px) {
        .feature-card

    {
        width: 100%;
    }

    }
</style>

<div class="hero">
    <div class="container">
        <h1>Welcome to Urban Web System</h1>
        <p>Empowering Communities to Build a Better Future</p>
    </div>
</div>

<div class="section">
    <div class="container">
        <h2>Discover What You Can Do</h2>
        <p>
            Urban Web System is your platform for civic engagement, where you can contribute ideas, collaborate with others,
            and bring positive change to your community.
        </p>
    </div>
</div>

<div class="section" style="background-color: #f3f4f6;">
    <div class="container">
        <h2>Explore Our Features</h2>
        <div class="features">
            <div class="feature-card">
                <h3>Propose Ideas</h3>
                <p>Share innovative solutions for urban challenges and gather community feedback.</p>
            </div>
            <div class="feature-card">
                <h3>Collaborate</h3>
                <p>Work with others to turn ideas into actionable projects.</p>
            </div>
            <div class="feature-card">
                <h3>Track Progress</h3>
                <p>Monitor ongoing initiatives and see the impact of your contributions.</p>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        <h2>Join Us in Building a Better Community</h2>
        <p>
            Together, we can create urban spaces that are more livable, sustainable, and connected.
            Join us today and make a difference in your city.
        </p>
        <a href="@((User.Identity != null && User.Identity.IsAuthenticated) ? Url.Action("All", "Suggestions") : "/Identity/Account/Login")" class="cta-button">
            Get Started Now
        </a>
    </div>
</div>